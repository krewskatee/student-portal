<h1>Update a Capstone</h1>
  <%= form_tag "/capstones/:id", method: :patch do %>
    <div>
      Name: <input type="text" name="name" value="<%= @capstone['name'] %>">
    </div>
    <div>
     Description: <input type="text" name="description" value="<%= @capstone['description'] %>">
    </div>
    <div>
      Email: <input type="text" name="email" value="<%= @capstone['url'] %>">
    </div>
    <div>
      Screenshot: <input type="text" name="screenshot" value="<%= @capstone['screenshot'] %>">
    </div>
    <div>
      Student: <input type="text" name="student_id" value="<%= @capstone['student_id'] %>">
    </div>
    <input type="submit" value="Update Capstone">
<% end %>
