<h1>Update a Capstone</h1>
<%= form_tag "/capstones/:id", method: :patch do %>
  <div>
    Name: <input type="text" name="name" value="<%= @resume[:first_name] %>">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @resume[:last_name] %>">
  </div>
  <div>
    Url: <input type="text" name="url" value="<%= @resume[:email] %>">
  </div>
  <div>
    Screenshot: <input type="file" name="screenshot" value="<%= @resume[:email] %>">
  </div>
  <div>
    Student ID: <input type="hidden" name="student_id" value="<%= @resume[:phone_number] %>">
  </div>
  <input type="submit" value="Update Capstone">
<% end %>
