<h2>Edit Your Profile</h2>
  <%= form_tag "/users/#{@user.id}", method: :patch do %>
  <div>
    Name: <input type="text" name="name" placeholder="<%= @user.name %>">
  </div>
  <div>
    Email: <input type="email" name="email" placeholder="<%= @user.email %>">
  </div>
  <div>
    Password: <input type="password" name="password">
  </div>
  <div>
    Confirm Password: <input type="password" name="password_confirmation">
  </div>
  <input type="submit" value="Update Profile">
<% end %>